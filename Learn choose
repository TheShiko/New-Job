#include <stdio.h>
#include <string.h>

int Add(int x, int y)
{
	int z = 0;
	z = x + y;
	return z;
}
int main()
{
	int a = 10;
	int b = 20;
	int sum = Add(a, b);//（）是函数调用操作符
	return 0;
}

